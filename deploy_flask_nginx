server {
    listen 80;
    listen [::]:80;
    server_name flask.opencodingsociety.com;

    # Proxy Socket.IO connections to 8500
    location /socket.io/ {
        proxy_pass http://localhost:8500;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Origin $http_origin;
    }

    # Proxy all other traffic to Flask app on 8587
    location / {
        proxy_pass http://localhost:8587;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Pass the Origin header to Flask so Flask-CORS can handle it
        proxy_set_header Origin $http_origin;

        # Let Flask handle CORS headers - do NOT add them here to avoid duplicates
        # Flask-CORS in main.py is configured to handle all allowed origins
    }
}
