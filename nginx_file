server {
    listen 80;
    listen [::]:80;
    server_name snakes.opencodingsociety.com;

    location / {
        proxy_pass http://localhost:8306;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        add_header "Access-Control-Allow-Origin"  "https://akhilkulkarni123.github.io/TM_FrontEnd/" always;

        # Pass the Origin header to Flask so Flask-CORS can handle it
        proxy_set_header Origin $http_origin;

        # Let Flask handle CORS headers - do NOT add them here to avoid duplicates
        # Flask-CORS in main.py is configured to handle all allowed origins
    }
} 
